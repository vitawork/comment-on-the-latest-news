<div class="jumbotron text-center">
  <div class="overlay"></div>
  <div class="background-image"></div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>New York Times Edition</p>
  </div>
</div>


<div class="container-fluid article-container">

  {{#if news}}
  {{#each news}}
  <div class="card" id={{_id}}>
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href={{link}}>{{title}}</a>
        <a class="btn btn-dark delete" id={{_id}}>Delete</a>
        {{!-- <a class="btn btn-success notes" data-id={{_id}}>Article Notes</a> --}}

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success notes" data-id={{_id}} data-toggle="modal"
          data-target="#exampleModal">
          Article Notes
        </button>
      </h3>
    </div>
    <div class="card-body">
      {{summary}}
    </div>


  </div>
  {{/each}}

  {{!-- modal --}}
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Notes</h5>
          <button type="button" class="close textempty" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul id='noteslist'>

            <p id="emptyp">There are not notes yet.</p>

          </ul>
        </div>
        <div class="modal-footer">
          <textarea class="form-control" id="message-text"></textarea>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary textempty" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary savenote" id='btnsavenote' data-id="">Save
            Note</button>
        </div>
      </div>
    </div>
  </div>
  {{!-- modal --}}
  {{else}}
  <div class="alert alert-warning text-center">
    <h4>Uh Oh. Looks like you don't have any saved articles yet.</h4>
  </div>
  {{/if}}

</div>

<footer class="footer">
  <div class="container">
    <p>New York Times Mongo Scraper</p>
  </div>
</footer>